@model List<User>

@{
    Layout = "~/Views/Shared/_newadminlayout.cshtml";

}

<div class="container-fluid">
    <div class="form-head d-flex mb-3 align-items-start">
        <div class="mr-auto d-none d-lg-block">
            <h2 class="text-black font-w600 mb-0">Users</h2>
        </div>


    </div>



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

<div class="w-25 d-flex justify-content-between align-items-center ">

    <button type="button" class="btn btn-primary d-inline-block  mx-5 w-75 mt-2" onclick="location.href='@Url.Action("addUser", "Privlliages" )'">New User </button>
</div>
<br/>

<div class="p-3">
    <table class="table">
    <thead>
        <tr>
           
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" ",await ViewBag.userManager.GetRolesAsync(user))</td>
                <td>
                        <a class="btn btn-primary shadow  sharp" asp-controller="Privlliages" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <a class="btn btn-danger shadow  sharp" asp-controller="Privlliages" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
          
        }
        
    </tbody>
</table>
</div>
            </div>
        </div>
    </div>
</div>
</div>