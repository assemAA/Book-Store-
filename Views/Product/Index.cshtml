@model List<ProductVM>
@{
    ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_newadminlayout.cshtml";
}
<div class="container-fluid">
    <div class="form-head d-flex mb-3 align-items-start">
        <div class="mr-auto d-none d-lg-block">
            <h2 class="text-black font-w600 mb-0">Books</h2>
        </div>


    </div>


    <!-- row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="w-100 d-flex justify-content-between align-items-center">
						<a class="btn btn-primary" asp-controller="Product" asp-action="New">Create New</a>

                        

                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
							<thead>
								<tr>
									<th scope="col">Image</th>
									<th scope="col">Name</th>
									<th scope="col">Describtion</th>
									<th scope="col">Category</th>
									<th scope="col">Price</th>
									<th scope="col">Action</th>
									


								</tr>
							</thead>
							<tbody>
								@foreach (ProductVM item in Model)
								{
									<tr>

										<td>
											<div class="image-gallery">
												<img class="lightboxed" width="50" src="@item.image">
											</div>
										</td>

										<td>@item.name</td>
										<td>@item.description</td>
										<td>@item.categoryName</td>
										<td>@item.price</td>
										<td>
											<div class="d-flex">

												<a asp-action="Edit" asp-controller="Product" asp-route-id="@item.id" class="btn btn-primary shadow  sharp">Edit </a>|
												<a asp-action="Delete" asp-controller="Product" asp-route-id="@item.id" class="btn btn-danger shadow  sharp">Delete</a>
											</div>
										</td>
										
										@*<td><a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Product" asp-route-id="@item.id">Edit</a></td>
										<td><a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.id">Delete</a></td>*@


									</tr>
								}

							</tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>






