@model HomeDataVM
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";

}

<div class="index" id="top">
    <div>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                  
                    <img class="d-block w-100" src="/assets/images/imgs/bg2.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/assets/images/imgs/bg3.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/assets/images/imgs/bg4.jpg" alt="Third slide" style="height:750px">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- ***** Banner Area End ***** -->
        <!-- Catigories Area Start -->
        <section>
            <div class="container">
                <div class="row my-5">
                    <div class="col-lg-12">
                        <div class="section-heading text-center">
                            <h2>Categories</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="center-content">
                            <div class="row text-center">
                               
                                @foreach (var item in Model.categories)
                                {
                                    <div class="col-lg-3 col-6 col-md-4 mb-4">


                                        <a asp-action="Products" asp-route-id="@item.id" class="hover-content " style="color:darkblue">
                                            <div class="inner">
                                                <h4>@item.name</h4>
                                            </div>
                                        </a>

                                    </div>


                                }

                            </div>

                        </div>
                    </div>
                </div>

        </section>
        <!-- ***** Banner Area Start ***** -->
        <div class=" bg-image  page-heading-- py-5">
            <div style="background-image: url('/assets/images/imgs/sec4.png'); height:600px"
                 class="second-page-heading   about-page-heading m-0" id="top">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="inner-content text-left mt-5">
                                <h2 class="text-light">Welcome to Braga</h2>
                                <span class="text-light">
                                    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Odio, perspiciatis
                                    harum officiis temporibus minima asperiores corrupti omnis mollitia suscipit
                                    eaque sapiente provident quaerat repellat facere, nulla, qui culpa. Ipsa,
                                    nobis.
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-5">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ***** Banner Area End ***** -->
    </div>
</div>





<!-- ***** Main Banner Area End ***** -->
<!-- ***** carousel Area Starts ***** -->
<section class="section py-5" id="women">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="women-item-carousel">
                    <div class="owl-women-item owl-carousel">

                        @foreach (var item in Model.books)
                        {

                            <!-- put product id here to check it into cart - localstorage -->
                            <a asp-action="ProductDetails" asp-route-id="@item.id" class="item product-card" id="1111">
                                <div class="thumb card w-75 h-75">
                                    <div class="shadow-inside-div"></div>
                                    <div class="card-img ">
                                        <img src="@item.image" alt="">
                                    </div>
                                    <div class="down-content text-light">
                                        <h4 class="text-light">@item.name</h4>
                                        <span class="text-light">@item.price egp</span>

                                    </div>
                                </div>

                            </a>




                        }
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>
<!-- ***** Women Area Ends ***** -->
@section Scripts{
    <script>
        $('#clothingCollapse').on('show.bs.collapse', function () {
            $('#minusIcon').show();
            $('#plusIcon').hide();
        });
        $('#clothingCollapse').on('hide.bs.collapse', function () {
            $('#minusIcon').hide();
            $('#plusIcon').show();
        });
    </script>
}