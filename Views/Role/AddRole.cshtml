@model BooksEccommerce.Models.Role

@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_newadminlayout.cshtml";
}

<h1>Add Role</h1>

<hr />
<div class="row w-75 mx-auto">
